<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAProject"
        xmlns:ToggleSwitch="clr-namespace:ToggleSwitch;assembly=ToggleSwitch" x:Class="RAProject.MainWindow"
        mc:Ignorable="d"
        Title="RetroAchievements Browser" Background="Teal" Height="652" Width="1079">
    <Grid>
        <Menu x:Name="menu" Height="20" Margin="0" VerticalAlignment="Top" Foreground="White">
            <MenuItem Header="File" Foreground="Black">
                <MenuItem x:Name="menuExit" Header="Exit" Click="menuExit_Click" Foreground="Black"/>
            </MenuItem>
            <MenuItem x:Name="menuData" Header="Data" Foreground="Black">
                <MenuItem x:Name="miSaveFile" Header="Save Data" Click="miSaveFile_Click"></MenuItem>
                <MenuItem x:Name="miLoadData" Header="Load Data From File..." Click="miLoadData_Click"></MenuItem>
                <Separator/>
                <MenuItem Header="Download...">
                    <MenuItem Header="All Data"/>
                    <MenuItem x:Name="miDownloadConsoles" Header="Consoles" Click="miDownloadConsoles_Click"/>
                    <MenuItem Header="Games"/>
                    <MenuItem Header="Achievements"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help" Foreground="Black">
                <MenuItem x:Name="miLaunchHelp" Header="Help" Click="miLaunchHelp_Click"/>
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        <Grid Margin="0,20,0,0">
            <Grid.Resources>
                <Style x:Key="NormalStyle">

                    <Style.Triggers>
                        <Trigger Property="UIElement.IsEnabled" Value="true">
                            <Setter Property="Control.Background" Value="#FF00CBCB"/>
                            <Setter Property="Control.Foreground" Value="Purple"/>
                        </Trigger>
                        <Trigger Property="UIElement.IsEnabled" Value="false">
                            <Setter Property="Control.Background" Value="Teal"/>
                            <Setter Property="Control.Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>
            <ToolBar Background="Teal" VerticalAlignment="Top" Margin="0" Height="45">
                <Label Content="Search" Foreground="White" FontSize="14" />
                <TextBox Width="250" Background="Transparent" Foreground="White" SelectionBrush="#FFFFA200" BorderBrush="White" Text="Enter search query..."/>
                <Separator />
                <ToggleSwitch:HorizontalToggleSwitch x:Name="tglVisualStyles" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" CheckedContent="Text" UncheckedContent="Visual" UncheckedBackground="Teal" CheckedBackground="#FF00CBCB" CheckedForeground="Black" Checked="tglVisualStyles_Checked" Unchecked="tglVisualStyles_Unchecked"/>
                <Button x:Name="btnTest" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnTest_Click" Margin="0,5,0,0"/>

            </ToolBar>
            <TabControl x:Name="tabControl" Margin="0,35,0,0" TabStripPlacement="Left" Background="Teal" BorderBrush="#00000000" SelectionChanged="tabControl_SelectionChanged">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Template">
                            <Setter.Value>

                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Grid>
                                        <Border  x:Name="Border" Margin="0,0,-4,0" BorderThickness="1,1,1,1" CornerRadius="10,0,0,10" >
                                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,2,12,2" RecognizesAccessKey="True"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>


                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FF00575A" />
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>

                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="Teal" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#FFF" />
                                        </Trigger>

                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem x:Name="tabUserProfile" Header="User Profile" Margin="0,0,0,0" Height="50" Width="150" FontSize="16" BorderThickness="3,0,0,0">
                    <WrapPanel Background="#FF00575A">
                        <GroupBox x:Name="groupBox" Header="GroupBox" Height="188" VerticalAlignment="Top" Margin="4,-1,348,0" Width="426" Foreground="White">
                            <Grid>
                                <Image x:Name="imgUserAvatar" HorizontalAlignment="Left" Height="150" Margin="5,6,0,0" VerticalAlignment="Top" Width="150"/>
                                <Label x:Name="lblUsername" Content="Label" HorizontalAlignment="Left" Margin="168,6,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="18" Panel.ZIndex="1" Background="Black"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Recently Played Games">
                            <WrapPanel x:Name="wrpRecentlyPlayed" Height="Auto" Width="Auto">
                                <WrapPanel.Resources>
                                    <Style TargetType="{x:Type Image}">
                                        <Setter Property="Margin" Value="10,10" />
                                    </Style>
                                </WrapPanel.Resources>
                            </WrapPanel>
                        </GroupBox>


                    </WrapPanel>
                </TabItem>
                <TabItem x:Name="tabConsoles" Header="Consoles" Margin="0,0,0,0" Height="50" Width="150">
                    <Grid>
                        <WrapPanel x:Name="wrpConsoles" Background="#FF00575A"/>
                        <DataGrid x:Name="dgConsoles" IsEnabled="False" Background="#FF00575A" IsHitTestVisible="False" Panel.ZIndex="-1"/>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabGames" Header="Games" Margin="0,0,0,0" Height="50" Width="150">
                    <WrapPanel Background="#FF00575A"></WrapPanel>
                </TabItem>
                <TabItem x:Name="tabAchievements" Header="Achievements" Margin="0,0,0,0" Height="50" Width="150">
                    <WrapPanel Background="#FF00575A"></WrapPanel>
                </TabItem>
                <TabItem x:Name="tabLeaderBoard" Header="Leader Board" Margin="0,0,0,0" Height="50" Width="150">
                    <WrapPanel Background="#FF00575A"></WrapPanel>
                </TabItem>
                <TabItem x:Name="tabSettings" Header="Settings" Margin="0,0,0,0" Height="50" Width="150">
                    <WrapPanel Background="#FF00575A"></WrapPanel>
                </TabItem>
                <TabItem x:Name="tabHelp" Header="Help" Margin="0,0,0,0" Height="50" Width="150">
                    <WrapPanel Background="#FF00575A">
                        <WebBrowser Source="C:\Users\Ben\Documents\GitHub\RAProject\Source\RAProject\Help\index.html" />
                    </WrapPanel>
                </TabItem>
            </TabControl>

            <StatusBar VerticalAlignment="Bottom" Background="Teal">
                <Label x:Name="lblStatus" Content="Label" Width="350" Foreground="#FF00CBCB"/>
                <Separator Height="30" Margin="0" VerticalAlignment="Top" Width="3" Background="#FF00CBCB"/>
                <Label x:Name="label1" Content="Label" Foreground="#FF00CBCB"/>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
